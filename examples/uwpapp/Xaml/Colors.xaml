<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpapp.Xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <Color x:Key="MessengerBlueColor">#0099ff</Color>
            <SolidColorBrush x:Key="Gray1" Color="#EEEEEE"/>
            <SolidColorBrush x:Key="Gray2" Color="#F8F8F8"/>
            <SolidColorBrush x:Key="ForegroundColor" Color="#000000"/>
            <SolidColorBrush x:Key="MessengerBlue" Color="{ThemeResource MessengerBlueColor}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="MessengerBlueColor">#0099ff</Color>
            <SolidColorBrush x:Key="Gray1" Color="#333333"/>
            <SolidColorBrush x:Key="Gray2" Color="#242424"/>
            <SolidColorBrush x:Key="ForegroundColor" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="MessengerBlue" Color="{ThemeResource MessengerBlueColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
